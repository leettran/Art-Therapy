        </activity>

        <receiver android:name=".BroadcastThis">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".SoundTestActivity"
            android:label="@string/title_activity_sound_test"
